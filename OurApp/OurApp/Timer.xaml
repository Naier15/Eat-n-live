<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OurApp.Timer">
    <ContentPage.Content>
        <StackLayout Margin="50, 110" BackgroundColor="#21E2D9">
            <StackLayout x:Name="FirstTime" Orientation="Vertical" HorizontalOptions="CenterAndExpand" Spacing="25" Margin="0, 35">
                <TimePicker x:Name="Tp1" Format="HH:mm" Scale="2" />
                <TimePicker x:Name="Tp2" Format="HH:mm" Scale="2"/>
                <TimePicker x:Name="Tp3" Format="HH:mm" Scale="2"/>
                <TimePicker x:Name="Tp4" Format="HH:mm" Scale="2"/>
            </StackLayout>
            <Button
                x:Name="acceptCourse" 
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
				Text="Установить"
				TextColor="Black"
				Pressed="Agree"
                Margin="0, 20, 0, 20"
                WidthRequest="180"
                HeightRequest="60"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>